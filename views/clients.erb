<h2>Список записавшихся</h2>

<table class="table table-bordered">
  <thead>
    <tr>
      <th class="bg-primary">#</th>
      <th class="bg-primary">Name</th>
      <th class="bg-primary">Phone</th>
      <th class="bg-primary">Date</th>
      <th class="bg-primary">Barber</th>
      <th class="bg-primary">Color</th>
    </tr>
  </thead>


<tbody>
  <% @clients.each do |client| %>
    <tr>
      <td><%= client.id %></td>
      <td><a href="/clients/<%= client.id %>"><%= client.name %></a></td>
      <td><%= client.phone %></td>
      <td><%= client.datestamp %></td>
      <td><%= client.barber %></td>
      <td style="background-color: <%= client.color %>"><%= client.color %></td>
      
    </tr>
  <% end %>
</tbody>

</table>